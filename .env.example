# EchoRift Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE (Your existing PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/echorift
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password
DATABASE_NAME=echorift

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# NATS
# =============================================================================
NATS_URL=nats://localhost:4222

# =============================================================================
# LIVEKIT (WebRTC Media Server)
# =============================================================================
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=devkey
LIVEKIT_SECRET=devsecret123456789012345678901234

# =============================================================================
# TURN/STUN (NAT Traversal)
# =============================================================================
TURN_URL=turn:localhost:3478
TURN_USERNAME=echorift
TURN_PASSWORD=echorift123
STUN_URL=stun:localhost:3478

# =============================================================================
# LDAP AUTHENTICATION
# =============================================================================
LDAP_URL=ldap://your-ldap-server:389
LDAP_BASE_DN=dc=example,dc=com
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=your_ldap_password
LDAP_USER_FILTER=(uid={{username}})
LDAP_GROUP_FILTER=(member={{dn}})

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
API_PORT=8080
WS_PORT=8081
FRONTEND_URL=http://localhost:5173
