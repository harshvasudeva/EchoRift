{
  "name": "echorift",
  "version": "0.1.0",
  "private": true,
  "description": "Enterprise Discord clone with LDAP authentication",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "dev:all": "concurrently \"npm run dev:infra\" \"npm run dev\"",
    "dev:infra": "docker compose -f infrastructure/docker/docker-compose.yml up",
    "dev:infra:down": "docker compose -f infrastructure/docker/docker-compose.yml down",
    "build": "npm run build --workspace=apps/web",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "db:migrate": "cd services/api && go run cmd/migrate/main.go",
    "clean": "rimraf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
